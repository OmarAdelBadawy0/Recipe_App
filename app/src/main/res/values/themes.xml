<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RecipeApp" parent="Base.Theme.RecipeApp" >
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorOnPrimary">@color/orange</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#E9CDCD</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash2</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.RecipeApp</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
    </style>

</resources>
